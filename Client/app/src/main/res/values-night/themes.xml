<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_blue_1</item>
        <item name="colorPrimaryVariant">@color/azure_blue_2</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azure_blue_1</item>
        <item name="colorSecondaryVariant">@color/azure_blue_2</item>
        <item name="colorOnSecondary">@color/azure_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:toolbarStyle">@color/azure_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/transition_actual_animation</item>
        <item name="android:windowExitTransition">@transition/transition_actual_animation</item>

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Dark mode -->
    <!-- Screen background if dark mode one -->

    <style name="TOOLBAR">
        <item name="android:background">@color/azure_blue</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <!-- Text background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/azure_blue</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>