<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_blue_1</item>
        <item name="colorPrimaryVariant">@color/azure_blue_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_1</item>
        <item name="colorSecondaryVariant">@color/teal_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/transition_actual_animation</item>
        <item name="android:windowExitTransition">@transition/transition_actual_animation</item>

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Light mode -->
    <!-- Screen background if light mode one -->

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/azure_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="TOOLBAR">
        <item name="android:background">@color/azure_blue</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/azure_blue</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>